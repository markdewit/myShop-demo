@model IEnumerable<MyShop.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

    <h1>Products</h1>
<div class="row">

    @foreach (var item in Model)
    {
    <div class="col-md-4" style="45opx; padding:10px; margin:10px;border: solid thin black">
        <div class="col-md-12">
            <img class="img-responsive" style="height:350px" src="~/Content/ProductImages/@item.Image" />
        </div>
        <div class="col-md-12">
            <h3>@Html.ActionLink(item.Name, "Details", new { Id = item.Id })</h3>
        </div>
        <div class="col-md-12">
            <p>@item.Description</p>
        </div>
        <div class="col-md-12">
            <p>@item.Price</p>
        </div>
        <div class="col-md-12">
            <a href="#" class="btn btn-default"> Add to Basket</a>
        </div>
    </div>


    }
</div>